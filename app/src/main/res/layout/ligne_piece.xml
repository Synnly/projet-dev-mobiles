<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingBottom="20dp">

    <EditText
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:inputType="text" android:text="nomPiece"
            android:id="@+id/texteNomPiece" android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/texteNomPiece"
            android:padding="20dp" android:background="@drawable/border_radius_small">

        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="N"/>

            <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:minHeight="200px" android:minWidth="100px"
                    android:id="@+id/imageNord"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoNord"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="E"/>

            <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:minHeight="200px" android:minWidth="100px"
                    android:id="@+id/imageEst"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoEst"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S"/>

            <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:minHeight="200px" android:minWidth="100px"
                    android:id="@+id/imageSud"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoSud"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="O"/>

            <ImageView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:minHeight="200px" android:minWidth="100px" android:id="@+id/imageOuest"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoOuest"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
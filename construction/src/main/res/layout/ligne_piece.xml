<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingBottom="5dp">

    <EditText
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:inputType="text" android:text="nomPiece"
            android:id="@+id/texteNomPiece"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/texteNomPiece"
            android:padding="20dp" android:background="@drawable/border_radius_small"
            android:id="@+id/linearLayout2">

        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="N"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="87dp"
                    android:id="@+id/imageNord" android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoNord"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="E"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="87dp"
                    android:id="@+id/imageEst" android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoEst"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="S"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="87dp"
                    android:id="@+id/imageSud" android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoSud"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical" android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="O"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="87dp"
                    android:id="@+id/imageOuest" android:background="@android:color/transparent"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="65dp" android:layout_height="wrap_content"
                    android:id="@+id/boutonPhotoOuest"
                    android:text="Ajouter\nphoto" android:textSize="8sp"/>

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/boutonSupprimerPiece" android:text="Supprimer"
            android:background="@drawable/border_radius_small_red"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>